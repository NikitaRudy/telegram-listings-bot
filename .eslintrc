{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended",
    "plugin:prettier/recommended",
  ],
  "plugins": ["jest"],
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "rules": {
    "no-await-in-loop": "warn",
    "no-unused-expressions": "off",
    "no-plusplus": "off",
    "global-require": "warn"
  }
}